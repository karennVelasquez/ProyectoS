@model IEnumerable<Front.Models.TransactionViewModel>

@{
    ViewData["Title"] = "Transaction";
}

<h1 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Consult Transaction</h1>
<p>
    <a asp-action="Create" style="color: darkslategrey;">Create New</a>
</p>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabla Estilizada</title>
    <style>
        .table {
            width: 100%;
            border-collapse: collapse; /* Elimina los espacios entre celdas */
            font-family: Arial, sans-serif; /* Define la fuente */
            margin: 20px 0; /* Espaciado alrededor de la tabla */
        }

            .table th, .table td {
                border: 1px solid #ddd; /* Borde alrededor de las celdas */
                padding: 8px; /* Espaciado dentro de las celdas */
                text-align: left; /* Alineación del texto */
            }

            .table th {
                background-color: darkslategrey; /* Fondo para los encabezados */
                font-weight: bold; /* Texto en negrita */
            }

            .table tr:nth-child(even) {
                background-color: #E1F0DA; /* Color de fondo para filas pares */
            }

            .table tr:hover {
                background-color: #BFD8AF; /* Color de fondo al pasar el ratón */
            }
    </style>
</head>

<table class="table" style="color: black;">
    <thead style="color: white; background-color: lightgray;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTransaction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumDocument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveredQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTransaction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Document)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumDocument)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveredQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quality)
                </td>
                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.IdTransaction }, new { style = "color: darkslategrey;" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdTransaction }, new { style = "color: darkslategrey;" })
                </td>
            </tr>
        }
    </tbody>
</table>