@model Front.ViewModels.CreateCustomerVM

@{

    ViewData["Title"] = "Create";

}

<div class="row">
    <div class="col-md-6" style="color: black;">
        <form asp-action="Create" method="post">
            <div>
                <h3>Person Details</h3>
                <div class="form-group">
                    <label asp-for="PersonModel.Name" class="control-label">Name</label>
                    <input asp-for="PersonModel.Name" class="form-control" />
                    <span asp-validation-for="PersonModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PersonModel.Lastname" class="control-label">Last name</label>
                    <input asp-for="PersonModel.Lastname" class="form-control" />
                    <span asp-validation-for="PersonModel.Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PersonModel.Email" class="control-label">Email</label>
                    <input asp-for="PersonModel.Email" class="form-control" />
                    <span asp-validation-for="PersonModel.Email" class="text-danger"></span>
                </div>

                <div class="form-group form-group-inline">
                    <label asp-for="DocumentTypeModel.IdDocumentType" class="control-label">Document Type</label>
                    <select asp-for="DocumentTypeModel.IdDocumentType" class="form-control" style="border-color: black;" asp-items="Model.DocumentTypes"></select>
                    <span asp-validation-for="DocumentTypeModel.IdDocumentType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PersonModel.NumDocument" class="control-label">Num Document</label>
                    <input asp-for="PersonModel.NumDocument" class="form-control" />
                    <span asp-validation-for="PersonModel.NumDocument" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn" style="background-color: #789461; color: white;" />
            </div>
            <div>
                <a asp-action="CustomerGet" style="color: darkslategrey;">Back</a>
            </div>
        </form>
    </div>
</div>


<style>

    .form-group-inline {
        display: flex;
        align-items: center;
    }

        .form-group-inline label {
            margin-right: 85px; /* Espacio entre la etiqueta y el campo de entrada */

            min-width: 100px; /* Ancho mínimo para las etiquetas */
        }

        .form-group-inline input {
            flex-grow: 1; /* Permite que el campo de entrada tome todo el espacio restante */
        }

        .form-group-inline span {
            margin-left: 10px; /* Espacio entre el campo de entrada y el mensaje de validación */

        }

</style>