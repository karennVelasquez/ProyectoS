<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheLastHope</title>
    <link rel="icon" type="image/png" href="~s/src/logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Front.styles.css" asp-append-version="true" />
    <style>
        .vertical-nav {
            width: 230px;
            position: fixed;
            height: 100%;
            top: 0;
            left: 0;
            background-color: #4F6F52;
            padding-top: 20px;
            border-right: 1px solid #1A4D2E;
            overflow-y: auto; /* Permitir desplazamiento vertical */
        }

            .vertical-nav a {
                padding: 10px 15px;
                text-align: left;
                text-decoration: none;
                font-size: 18px;
                color: #333;
                display: block;
            }

                .vertical-nav a:hover {
                    background-color: #B5C18E;
                    color: #000;
                }

        .main-content {
            margin-left: 220px; /* Same as the width of the sidebar */
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="vertical-nav">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="IndexGame">THELASTHOPE</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="IndexGame">Home</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="PrivacyGame">Privacy</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="AchievementsView" asp-action="AchievementsGet">Achievements</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="GamesView" asp-action="GamesGet">Games</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="LevelView" asp-action="LevelGet">Level</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ExitGame">Exit</a>
    </div>
    <div class="main-content">
        <div class="container">
            <main role="main" class="pb-3">
                @{
                    var errorMessage = TempData["errorMessage"]?.ToString();
                    var successMessage = TempData["successMessage"]?.ToString();
                }
                @if (!string.IsNullOrWhiteSpace(successMessage))
                {
                    <div class=" alert alert-success">
                        <b>Success : </b>@successMessage
                        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" arial-label="Close"></button>
                    </div>
                }
                else if (!string.IsNullOrWhiteSpace(errorMessage))
                {
                    <div class=" alert alert-danger">
                        <b>Error : </b>@errorMessage
                        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" arial-label="Close"></button>
                    </div>
                }
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - SGRA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/js/costumjs.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
