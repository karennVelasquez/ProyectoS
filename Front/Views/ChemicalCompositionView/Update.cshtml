@model Front.Models.ChemicalCompositionViewModel

@{
    ViewData["Title"] = "Update Chemical Composition";
}
<h1 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Update</h1>
<h4 style="color: black; font-family:'Trebuchet MS',sans-serif; font-weight:bold;">Chemical Composition</h4>
<hr />
<head>
    <title>Inline Form Elements Example</title>
    <!-- Incluir el CSS de Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluir tu propio archivo CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        .form-group-inline {
            display: flex;
            align-items: center;
        }

            .form-group-inline label {
                margin-right: 65px; /* Espacio entre la etiqueta y el campo de entrada */
                min-width: 100px; /* Ancho mínimo para las etiquetas */
            }

            .form-group-inline input {
                flex-grow: 1; /* Permite que el campo de entrada tome todo el espacio restante */
            }

            .form-group-inline span {
                margin-left: 10px; /* Espacio entre el campo de entrada y el mensaje de validación */
            }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-4" style="color: black;">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group form-group-inline">
                    <label asp-for="IdChemicalComposition" class="control-label"></label>
                    <input asp-for="IdChemicalComposition" class="form-control" style="border-color: black;" disabled />
                    <input type="hidden" asp-for="IdChemicalComposition" />
                    <span asp-validation-for="IdChemicalComposition" class="text-danger"></span>
                </div>
                <div class="form-group form-group-inline">
                    <label asp-for="IdWaste" class="control-label"></label>
                    <input asp-for="IdWaste" class="form-control" style="border-color: black;" />
                    <span asp-validation-for="IdWaste" class="text-danger"></span>
                </div>
                @*@<div class="form-group form-group-inline">
                <label asp-for="Password" class="control-label"></label>
                @*<input asp-for="Password" class="form-control"/>
                <input type="password" id="Password" name="Password" class="form-control" style="border-color: black;" />
                <span asp-validation-for="Password" class="text-danger"></span>
                </div>*@
                <div class="form-group form-group-inline">
                    <label asp-for="Chemical_Composition" class="control-label"></label>
                    <input asp-for="Chemical_Composition" class="form-control" style="border-color: black;" />
                    <span asp-validation-for="Chemical_Composition" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                <label asp-for="RegisterDate" class="control-label"></label>
                <input asp-for="RegisterDate" class="form-control" />
                <span asp-validation-for="RegisterDate" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                <label class="form-check-label">
                <input class="form-check-input" asp-for="StateDelete" /> @Html.DisplayNameFor(model => model.StateDelete)
                </label>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Save" class="btn" style="background-color: #789461; color: white;" />
                </div>
                <div>
                    <a asp-action="ChemicalCompositionGet" style="color: darkslategrey;">Back</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}