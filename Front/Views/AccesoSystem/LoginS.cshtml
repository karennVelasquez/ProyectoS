@model Front.ViewModels.PersonLoginWM;
@{
    Layout = null;
}
<html>
<head>
    <title>PersonLogin</title>
    <link rel="icon" type="image/png" href="~/src/logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="image-container">
        <img src="~/src/logo.png" width="150" height="150" />

    </div>

    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header  text-center">
                    <h1 style="color: grey; font-family:fantasy,sans-serif; font-weight:bold;">Sign in</h1>
                </div>
                <div class="card-body">


                    <form asp-controller="AccesoSystem" asp-action="LoginS" method="post">
                        <input class="form-control mb-3" type="text" placeholder="User Name" required asp-for="UserName" />
                        <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password" />
                        <div class="d-grid gap-2 mb-3">
                            <a asp-controller="AccesoSystem" asp-action="LoginS" style="color: mediumseagreen;">Forgot password?</a>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <!--<button class="btn btn-primary" type="submit">Iniciar Sesión</button>-->
                            <button style="background-color: darkslategrey; color: white;">Sign in</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        Don't have an account?  <a asp-controller="AccesoSystem" asp-action="LoginS" style="color: mediumseagreen;">Sign up</a>
                    </form>
                </div>
            </div>
        </div>
    </div>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
